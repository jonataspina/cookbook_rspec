<h1>CookBook</h1>
<p>Bem-vindo ao maior livro de receitas online</p>

<%= link_to 'Home', root_path, class: 'nav-link' %>
<%= link_to 'Enviar uma receita', new_recipe_path, class: 'nav-link' %>

<h3>Receitas destaque</h3>

<div id='recipes-featured'>
    <%@featured_recipes.each do |recipe|%>
        <h1><%= link_to recipe.title, recipe %></h1>
        <%= image_tag 'star.png' %>
        <ul>
            <li><%= recipe.recipe_type%></li>
            <li><%= recipe.cuisine%></li>
            <li><%= recipe.difficulty%></li>
            <li><%= recipe.cook_time_min%></li>
        </ul>
    <%end%>
</div>

<h3>Outras receitass</h3>

<div id='other-recipes'>
    <%@other_recipes.each do |recipe|%>
        <h1><%= link_to recipe.title, recipe %></h1>

        <ul>
            <li><%= recipe.recipe_type%></li>
            <li><%= recipe.cuisine%></li>
            <li><%= recipe.difficulty%></li>
            <li><%= recipe.cook_time_min%></li>
        </ul>
    <%end%>
</div>